<!DOCTYPE html>
<html lang="en">

<head>
    <link rel='stylesheet' href='/stylesheets/register.css' />
    <% include ../partials/header %>
</head>

<body>
    <% include ../partials/navigation %>
    <div class="container">
        <div class="card card-primary">
            <div class="card-body">
                <div class="card-header">
                    Register User
                </div>
                <div class="card-text">
                    <form class="create-form" action="/auth/register" method="post">
                        <br>
                        <div class="form-group row mb-2">
                            <div class="col col-md-4">
                                <div class="row">
                                    <label class="col-form-label" for="username">
                                        Username
                                    </label>
                                </div>
                                <div class="row">
                                    <input type="text" id="username" name="username" class="form-control"
                                        <% if(typeof user !== 'undefined') {%> value="<%= user.username %>" <% } %>
                                        placeholder="Username required" required="">
                                    <% if(typeof userErr !== 'undefined') {%>
                                    <span class="err"><%= userErr.msg %> </span>
                                    <% } %>
                                </div>
                            </div>
                            <div class="col col-md-1"></div>
                            <div class="col col-md-4">
                                <div class="row">
                                    <label class="col-form-label" for="email">
                                        Email
                                    </label>
                                </div>
                                <div class="row">
                                    <input type="email" id="email" name="email" class="form-control"
                                        <% if(typeof user !== 'undefined') {%> value="<%= user.email %>" <% } %>
                                        placeholder="Please Enter Email" required="">
                                    <% if(typeof emailErr !== 'undefined') {%>
                                    <span class="err"><%= emailErr.msg %> </span>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row mb-2">
                            <div class="col col-md-4">
                                <div class="row">
                                    <label class="col-form-label" for="password">
                                        Password
                                    </label>
                                </div>
                                <div class="row">
                                    <input type="password" id="password" name="password" class="form-control"
                                        <% if(typeof user !== 'undefined') {%> value="<%= user.password %>" <% } %>
                                        placeholder="Please Enter Password" required="">
                                    <% if(typeof passwordErr !== 'undefined') {%>
                                    <span class="err"><%= passwordErr.msg %> </span>
                                    <% } %>
                                </div>
                            </div>
                            <div class="col col-md-1"></div>
                            <div class="col col-md-4">
                                <div class="row">
                                    <label class="col-form-label" for="role">
                                        Role
                                    </label>
                                </div>
                                <div class="row">
                                    <input type="text" id="role" name="role" class="form-control"
                                        <% if(typeof user !== 'undefined') {%> value="<%= user.role %>" <% } %>
                                        placeholder="Please Enter Role" required="">
                                    <% if(typeof roleErr !== 'undefined') {%>
                                    <span class="err"><%= roleErr.msg %> </span>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                      
                         
                            <div class="col col-md-4">
                                
                                <div class="row" style="justify-content: flex-end;">
                                    <button class="btn btn-sm btn-primary" type="reset">Reset</button>
                                    <button class="btn btn-sm btn-primary" type="submit">Register</button>
                                </div>
                            </div>
                       



                        <br>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
<% include ../partials/footer %>

</html>